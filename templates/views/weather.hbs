<!DOCTYPE html>
<html lang="en">
<head>
   {{>headersLinks}}
</head>
<body>
   {{>navbar}}
  <!-- main-header -->
  <div class="container-fluid main_header">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
         <div class="main_content">
           <form class="temp_form">
            <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
            <input type="submit" value="Search" id="submitBtn">
           </form>

         </div>
         <center>
          <div class="tempInformation">
          <div class="topLayer">
            <p id="day">Wensday</p>
            <p id="today_date">3 Apr</p>
          </div>
          <div class="mainLayer">
            <p id="city_name">Get output here</p>
            <div class="middle_layer data_hide">
              <p id="temp"><span>0</span><sup>o</sup>C</p>
              <p id="temp_status">
                <i class="fa fa-cloud" aria-hidden="true"></i>
              </p>
            </div>
          </div>
         </center>

         </div>

      </div>
    </div>
  </div>
  <!-- footer  -->
   {{>footer}}
 <script src="js/main.js"></script>
    
</body>
</html>